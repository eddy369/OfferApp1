<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OfferApp1.viewCatalogo" NavigationPage.HasNavigationBar="False">
    
        <StackLayout>
            <Label Text="CATEGORIAS" FontSize="20" HorizontalTextAlignment="Center"/>

            <ListView x:Name="MyListView" SelectedItem="{Binding ID_EMPRESA}" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="300"/>
                                    </Grid.ColumnDefinitions>
                                    <Label x:Name="lblCodigo" Text="{Binding NOMBRE}" Grid.Column="0"></Label>
                                </Grid>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    
</ContentPage>